<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_margin="10dp"
        android:background="@color/card_backgrond">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="@color/card_backgrond">

            <TextView
                android:id="@+id/venueTextRegister"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginStart="11dp"
                android:text="CSE Dept. CTAE Udaipur"
                android:textColor="@color/textcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/desTextRegister"
                app:layout_constraintStart_toEndOf="@+id/dateTextRegister"
                app:layout_constraintTop_toBottomOf="@+id/desTextRegister"
                app:layout_constraintVertical_bias="0.181" />

            <ImageView
                android:id="@+id/eventFavRegister"
                android:layout_width="106dp"
                android:layout_height="112dp"
                android:scaleType="fitXY"
                android:src="@drawable/event_planner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.326" />

            <TextView
                android:id="@+id/titleTextRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfa_slab_one"
                android:text="E-CELL CTAE , Webinar"
                android:textColor="@color/textcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toEndOf="@+id/eventFavRegister"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.093" />

            <TextView
                android:id="@+id/desTextRegister"
                android:layout_width="237dp"
                android:layout_height="61dp"
                android:paddingRight="20dp"
                android:text="E-Cell CTAE aims to to induce an entrepreneurial mindset into the students and "
                android:textColor="@color/textcolor"
                android:maxLines="3"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/titleTextRegister"
                app:layout_constraintTop_toBottomOf="@+id/titleTextRegister"
                app:layout_constraintVertical_bias="0.129" />

            <TextView
                android:id="@+id/dateTextRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="06/10/2020"
                android:textColor="@color/textcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/desTextRegister"
                app:layout_constraintTop_toBottomOf="@+id/desTextRegister"
                app:layout_constraintVertical_bias="0.101" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>